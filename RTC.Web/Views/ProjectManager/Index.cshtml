
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html, body {
        max-width: 100%;
        overflow-x: hidden;
    }

    .page-content {
        padding: 0 !important;
    }

    #page-wrap {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
    }

    .gradient-bg {
        background: linear-gradient(to right top, #f4ff41, #ff5353 );
        position: relative;
    }

    .cnxoay {
        width: 300px;
        height: 500px;
        background: rgba(255,255,255,0.2);
        position: fixed;
        top: 0;
        transform: rotate(-30deg) translate(-100px, -200px);
    }

    .cnxoay1 {
        width: 500px;
        height: 300px;
        background: rgba(255,255,255,0.2);
        position: fixed;
        bottom: 3rem;
        transform: rotate(-30deg) translate(-100px, 200px);
        left: 16rem;
    }

    .cnxoay2 {
        width: 300px;
        height: 500px;
        background: rgba(0, 0, 0, 0.125);
        position: fixed;
        top: 18rem;
        right: 19rem;
        transform: rotate(-30deg) translate(450px, -400px);
    }

    .body-container {
        width: 100%;
    }

   @* @@media (max-width: 950px) {


        .body-container {
            margin: 0 auto;
            width: 100%;
            padding: 0 1.5rem 5rem;
        }
    }*@

    .board {
        background: #eef8ff;
        border-color: #cacaca;
        padding: 2rem !important;
        border-radius: 7px;
        -webkit-box-shadow: 0 50px 100px -20px rgba(50,50,93,.25), 0 30px 60px -30px rgba(0,0,0,.3), 0 -18px 60px -10px rgba(0,0,0,.025);
        box-shadow: 0 50px 100px -20px rgba(50,50,93,.25), 0 30px 60px -30px rgba(0,0,0,.3), 0 -18px 60px -10px rgba(0,0,0,.025);
    }

    @@media (max-width: 600px) {
        .board {
            background: #36393f;
            border-color: #262626;
            padding: 1rem !important;
            border-radius: 7px;
            -webkit-box-shadow: 0 50px 100px -20px rgba(50,50,93,.25), 0 30px 60px -30px rgba(0,0,0,.3), 0 -18px 60px -10px rgba(0,0,0,.025);
            box-shadow: 0 50px 100px -20px rgba(50,50,93,.25), 0 30px 60px -30px rgba(0,0,0,.3), 0 -18px 60px -10px rgba(0,0,0,.025);
        }
    }

    .board-background {
        background: #eef8ff;
    }

    .board-header-text {
        color: #172b4d;
        font-size: 0.875rem;
        font-weight: 500;
        line-height: 1.5rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .title-text {
        overflow: hidden;
        text-overflow: ellipsis;
        word-wrap: break-word;
        color: #172b4d;
        font-weight: 700;
        line-height: 24px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .icon-style {
        overflow: hidden;
        text-overflow: ellipsis;
        color: #172b4d;
        font-weight: 600;
        line-height: 24px;
        font-size: 16px;
    }

    .text-img {
        font-weight: 700;
        line-height: 20px;
        color: white;
        overflow-wrap: break-word;
        text-align: left;
        word-wrap: break-word;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        cursor: pointer;
        position: absolute;
        font-size: 22px;
        top: 1.5rem;
        left: 2.5rem;
    }

    .img-style {
        background-size: cover;
        width: 23%;
        height: 125px;
        background-position: center center;
        border-radius: 5px;
        position:relative;
    }

    #parent:hover #child {
        opacity: 1;
    }

    #child {
        opacity:0;
    }

    .add-btn {
        position: absolute;
        left: 39%;
        top: 30%;
    }

    .del-button {
        color: white;
        font-size: 25px;
        position: absolute;
        left: 89%;
    }

    @@media screen and (max-width: 400px){
        .img-style {
            background-size: cover;
            width: 47%;
            height: 125px;
            background-position: center center;
            border-radius: 5px;
            position: relative;
        }

        .add-btn {
            position: absolute;
            left: 34%;
            top: 30%;
        }

        .del-button {
            color: white;
            font-size: 30px;
            position: absolute;
            left: 81%;
        }
    }

    @@media screen and (min-width: 401px) and (max-width: 600px) {
        .img-style {
            background-size: cover;
            width: 47%;
            height: 125px;
            background-position: center center;
            border-radius: 5px;
            position: relative;
        }

        .add-btn {
            position: absolute;
            left: 34%;
            top: 30%;
        }

        .del-button {
            color: white;
            font-size: 30px;
            position: absolute;
            left: 83%;
        }
    }

    @@media screen and (min-width: 601px) and (max-width: 900px) {
        .img-style {
            background-size: cover;
            width: 32%;
            height: 125px;
            background-position: center center;
            border-radius: 5px;
            position: relative;
        }
        .del-button {
            color: white;
            font-size: 30px;
            position: absolute;
            left: 85%;
        }
    }
</style>

<div class="d-flex flex-column gradient-bg" style="height:100%" ng-controller="ProjectManagerController">
    <div style="z-index: 2;">
        <div class="contact-body">
            <div class="body-container d-flex flex-wrap">

                <!-- || board -->
                <div class="board board-background col-lg-10 col-xs-12" style=" margin: 1rem auto">
                    <div>
                        <div class="d-flex col-12">
                            <i class="far fa-user icon-style mr-2"></i>
                            <h3 class="title-text">Các dự án của bạn</h3>
                        </div>
                        <div class="mt-2 d-flex flex-wrap" style="">

                            <a ng-repeat="item in ListUserOwnedProject track by $index" id="parent" href="#" ng-style="ListBGImageStyle[$index]" class="mr-2 mb-2 img-style" ng-click="GoToProjectDetail(item.ProjectID)">
                                <span id="child" ng-click="DeleteProject(item.ProjectID)"><i class="far fa-times-circle del-button"></i></span>
                                <div style="padding:1rem;">
                                    <h1 style="font-size: 16px; color: #fff; font-weight: 700; line-height: 20px;">
                                        {{item.ProjectName}}
                                    </h1>
                                </div>
                            </a>
                            <a class="mr-2 mb-2 img-style" style="background-color: #bbb; cursor: pointer" data-toggle="modal" data-target="#modal2">
                                <div style="padding:1rem; height: 100%; position:relative">
                                    <img class="add-btn" src="~/Assets/Client/icon/iconfinder_More_372914 (1).png" alt="Alternate Text" width="50" height="50" />
                                </div>
                            </a>

                        </div>
                    </div>

                    <div class="mt-4">
                        <div class="d-flex col-12">
                            <i class="fas fa-users icon-style mr-2"></i>
                            <h3 class="title-text">Các dự án bạn tham gia</h3>
                        </div>
                        <div class="mt-2 d-flex flex-wrap" style="">

                            <a ng-repeat="item in ListUserJoinedProject track by $index" href="#" ng-style="ListBGImageStyle1[$index]" class="mr-2 mb-2 img-style" ng-click="GoToProjectDetail(item.ProjectID)">
                                <div style="padding:1rem;">
                                    <h1 style="font-size: 16px; color: #fff; font-weight: 700; line-height: 20px;">
                                        {{item.ProjectName}}
                                    </h1>
                                </div>
                            </a>


                        </div>
                    </div>
                </div>
                <!-- -->


            </div>
        </div>
    </div>
    @* <div class="gradient-bg"></div>*@
    <div class="cnxoay"></div>
    <div class="cnxoay1"></div>
    <div class="cnxoay2"></div>

    <div id="add-task">
        <div class="modal fade" id="modal2" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content form-background">
                    <div class="modal-header">
                        <h5 class="modal-title edit-on-click" style="font-weight:700;font-size: 18px">
                            Tạo dự án mới
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i class="fal fa-times"></i></span>
                        </button>
                    </div>
                    <div class="modal-body" style="padding-top: 0;">
                        <div>
                            <div class="form-group">
                                <span style="color:red; font-size: 1.2rem">*</span>
                                <label class="form-label label-text board-header-text" for="example-textarea">Mã dự án: </label>
                                <div class="">
                                    <input type="text" ng-model="Dummy.ProjectCode" class="form-control input-style no-limit-width work-detail label-text" rows="5" placeholder="..." />
                                </div>
                            </div>

                            <div class="form-group">
                                <span style="color:red; font-size: 1.2rem">*</span>
                                <label class="form-label label-text board-header-text" for="example-textarea">Tên dự án: </label>
                                <div class="">
                                    <input ng-model="Dummy.ProjectName" class="form-control input-style no-limit-width work-finished label-text" rows="5" placeholder="..." />
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="CreateProject()">Thêm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

@section FooterSection{
    <script src="~/AngularJS/Service/ProjectManagerService.js"></script>
    <script src="~/AngularJS/Controller/ProjectManagerController.js"></script>

}