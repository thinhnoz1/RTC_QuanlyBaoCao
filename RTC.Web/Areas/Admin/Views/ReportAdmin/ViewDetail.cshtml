@model  RTC.Model.Models.ReportModel

<div class="modal fade" id="md-frmLabel" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header border-bottom">
                <h2 class="modal-title text-center text-uppercase fw-500 ml-2">Thông tin báo cáo</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.ReportID)

                    <div class="form-group">
                        <div class="">Dự án:</div>
                        <div class="col-12">
                            @Html.DisplayFor(model => model.ProjectCode, new { htmlAttributes = new { @class = "valueKey" } })  @Html.DisplayFor(model => model.ProjectName, new { htmlAttributes = new { @class = "valueKey" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <span class="label-text">Chi tiết: </span>
                        <div class="col-12">
                            @Html.DisplayFor(model => model.WorkDetail, new { htmlAttributes = new { @class = " valueVN" } })
                        </div>
                    </div>


                    <div class="form-group">
                        <span class="label-text">Công việc đã hoàn thành: </span>
                        <div class="col-12">
                            @Html.DisplayFor(model => model.WorkFinished, new { htmlAttributes = new { @class = " valueVN" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <span class="label-text">Vấn đề tồn đọng: </span>
                        <div class="col-12">
                            @Html.DisplayFor(model => model.ProblemRemained, new { htmlAttributes = new { @class = "valueEN" } })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <span class="label-text">Giải pháp dự kiến: </span>
                        <div class="col-12">
                            @Html.DisplayFor(model => model.ExpectedSolution, new { htmlAttributes = new { @class = "valueEN" } })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <span class="label-text">Ghi chú thêm: </span>
                        <div class="col-12">
                            @Html.DisplayFor(model => model.Note, new { htmlAttributes = new { @class = "valueEN" } })
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                @* <button type="button" class="btn btn-primary btna-addlabel" onclick="Action_AddLabel()">Tạo mới</button>
                    <button type="button" class="btn btn-primary btna-updatelabel" onclick="Action_UpdateLabel()">Lưu lại</button>*@
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
